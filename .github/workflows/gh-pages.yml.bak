name: CI/CD Pipeline

on:
  push:
    branches: [main]
    paths: 
      - 'khimoo-portfolio/**'
      - 'articles/**'
      - 'flake.nix'
      - 'flake.lock'

env:
  CARGO_TERM_COLOR: always
  NIX_CONFIG: "experimental-features = nix-command flakes"

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install Nix
        uses: cachix/install-nix-action@v23
        with:
          github_access_token: ${{ secrets.GITHUB_TOKEN }}

      - name: Process articles
        run: |
          nix develop --command cargo run --bin process-articles --features cli-tools
        working-directory: ./khimoo-portfolio

      - name: Generate link graph
        run: |
          nix develop --command cargo run --bin generate-link-graph --features cli-tools
        working-directory: ./khimoo-portfolio

      - name: Build WebAssembly application
        run: |
          nix develop --command trunk build --release --public-url /khimoo.io/
        working-directory: ./khimoo-portfolio

      - name: Prepare deployment directory
        run: |
          cp -r ./khimoo-portfolio/dist ./public
          cp ./public/index.html ./public/404.html

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public
